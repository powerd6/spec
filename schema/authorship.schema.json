{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://spec.powerd6.org/schemas/authorship.json",
    "title": "Authorship",
    "description": "Information regarding authorship and contributions",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "references": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri-reference"
            }
        },
        "contributions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "name"
    ],
    "unevaluatedProperties": false
}